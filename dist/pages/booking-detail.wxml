            <text class="symbol _55396f6">￥</text>{{item.price}}</text>
        </view>
      </view>
      <view class="item _55396f6">
        <view class="left _55396f6">数量</view>
        <view class="right _55396f6">
          <text class="_55396f6">
            <text class="symbol _55396f6">x</text> {{item.count}}</text>
        </view>
      </view>
