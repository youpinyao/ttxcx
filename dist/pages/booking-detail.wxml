        <view class="left _55396f6">在线支付折后</view>
        <view class="right _55396f6">{{detail.statusText === '未支付' ? '应付' : '已支付'}}:
          <text class="orange _55396f6">
            <text class="symbol _55396f6">￥</text>{{detail.totalPrice}}</text>
        </view>
      </view>

      <view class="code-text _55396f6" wx:if="{{detail.statusText === '已支付'}}">
        验证码：{{detail.code}}
      </view>

      <view class="code-text _55396f6" wx:if="{{detail.statusText === '申请退款' || detail.statusText === '退款中' || detail.statusText === '退款完成'}}">
        {{detail.statusText}}
      </view>

      <view class="submit-button _55396f6" wx:if="{{detail.statusText === '未支付'}}" bindtap="doSubmit">{{selectedPayWay.type == 'ONLINE' ? '立即付款' : '提交订单'}}</view>

      <view class="submit-button _55396f6" wx:if="{{detail.statusText === '已支付'}}" bindtap="showRefund">申请退款</view>
    </view>
  </view>

