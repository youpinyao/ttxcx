                <view class="fr _55396f6">
                  <text class="_55396f6">{{selectedPayWay.name || '请选择'}}</text>
                  <view class="discount _55396f6"  wx:if="{{selectedPayWay.discount}}">{{selectedPayWay.discount}}</view>
                </view>
              </picker>
            </view>
          </view>
        </label>
      </view>
    </view>

